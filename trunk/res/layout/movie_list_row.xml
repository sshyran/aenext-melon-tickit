<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
 android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="160px">
	<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_height="fill_parent" android:layout_width="fill_parent">
    	<ImageView		
    	android:id="@+id/movie_image"
        android:layout_height="145px"
        android:layout_weight="0"
        android:layout_width="100px" 
        android:layout_marginLeft="5px" 
        android:layout_marginRight="5px" 
        android:layout_marginTop="5px" android:layout_gravity="top|left"
        android:src="@drawable/no_image"/>
        
		<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
    
	    	<TextView  
			android:id ="@+id/name"
	   		android:text="title fdfdf fdfdfd fdfdf fdfd" 
	   		android:layout_width="fill_parent" 
	   		android:layout_margin="2px" 	   		
	        android:typeface="normal" 
	        android:textStyle="bold"
    	    android:textSize="20px"	   		 
	   		android:layout_height="50px"
	   		android:textColor="#FFF"/>
	   		<TextView  
			android:id ="@+id/duration_standard_rating"
	   		android:text="standard_rating" 
	   		android:layout_width="fill_parent" 
	   		android:layout_margin="2px" 
	   		android:textStyle="bold" 
	   		android:layout_height="20px"/>
	   		<TextView  
			android:id ="@+id/genres"
	   		android:text="genres" 
	   		android:layout_width="fill_parent" 
	   		android:layout_margin="2px" 
	   		android:textStyle="bold" 
	   		android:layout_height="20px"/>
	   		<TextView  
			android:id ="@+id/release_date"
	   		android:text="release_date" 
	   		android:layout_width="fill_parent" 
	   		android:layout_margin="2px" 
	   		android:textStyle="bold" 
	   		android:layout_height="20px"/>

			<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    		android:orientation="horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content">			

         		<RatingBar 
	     		android:id="@+id/imdb_rating"
    	        style="?android:attr/ratingBarStyleSmall"            
        	    android:layout_height="15px" 
	            android:isIndicator="true" 
    	        android:layout_gravity="bottom" 
        	    android:layout_width="wrap_content" 
            	android:stepSize="0.1" 
	            android:numStars="5" 
    	        android:layout_weight="1"             
        	    />        
		   		<TextView  
				android:id ="@+id/imdb_rating_text"
	   			android:text="3.3" 
	   			android:layout_width="wrap_content" 
	   			android:layout_margin="2px" 
	   			android:textStyle="bold" 
	   			android:layout_height="20px"/>

            </LinearLayout>
	    </LinearLayout>
	</LinearLayout>
</LinearLayout>

